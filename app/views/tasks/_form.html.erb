<div class="container">
  <%= form_for @task, class: "form-horizontal" do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@task.errors.count, "error") %> prohibited
        this task from being saved:
      </h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div class="form-group">
      <label class="control-label col-sm-2">Title:</label>
      <div class="col-sm-10">
        <%= f.text_field :title, class:"form-control" %>
      </div>
    </div>
    <br>
    <br>
    <br>
    <div class="form-group">
      <label class="control-label col-sm-2">Description:</label>
      <div class="col-sm-10">
        <%= f.text_area :description, class:"form-control" %>
      </div>
    </div>
    <br>
    <br>
    <br>
    <div class="form-group">
      <label class="control-label col-sm-2">Date to Deliver:</label>
      <div class="col-sm-10">
        <%= f.datetime_select :date_to_deliver, class:"form-control" %>
      </div>
    </div>
    <br>
    <br>
    <div class="form-group">
      <label class="control-label col-sm-2">Course:</label>
      <div class="col-sm-10">
        <%= f.select :course_id, options_for_select(current_user.courses.map{ |c| [c.name, c.id] }) %>
      </div>
    </div>
    <br>
    <br>
    <div class="form-group">
      <label class="control-label col-sm-2">Groups:</label>
      <div class="col-sm-10">
        <%= select_tag "groups_tasks", options_from_collection_for_select(Group.all, 'id', 'name',@task.groups.map{ |t| t.id }), :multiple => true %>
      </div>
    </div>
    <br>
    <br>
    <br>
    <div class="form-group">
      <div align="center">
        <%= f.submit "Add Task", class: "btn btn-primary align-center" %>
      </div>
    </div>
  <% end %>
</div>
