<div class="container">
  <h1> My Groups </h1>
  <% @courses.each do |course| %>
  <% course.groups.each do |group| %>
  <% if course.semester.status == 1 %>
    <h3><%= group.name %></h3>
    <table class="table">
      <thead>
        <tr>
          <th>User Number</th>
          <th>Students</th>
        </tr>
      </thead>
      <tbody>
        <% group.users.each do |user| %>
          <tr>
            <td><%= user.user_number %></td>
            <td><%= user.full_name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  <% end %>
  <% end %>
</div>
