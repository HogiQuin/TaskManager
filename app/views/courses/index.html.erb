<div class="container">
  <div class="container">
    <h1> Courses </h1>
    <div class="container">
      <table class="table">
        <tr>
          <th> Course Name</th>
          <th> Semester</th>
          <th> Edit </th>
          <th> Delete </th>
        </tr>
        <% @courses.each do |course| %>
          <tr>
            <td> <%= course.name %> </td>
            <td><%= @semester = Semester.find(course.semester_id).name %><br>
              <strong>Groups</strong>
              <table>
                <% course.groups.each do |group| %>
                <tr>
                  <td><%= group.name %></td>
                </tr>
                <% end %>
              </table>
            </td>
            <td> <%= link_to "Edit", edit_course_path(course), class: "btn btn-warning align-center" %></td>
            <td> <%= link_to 'Destroy', course_path(course),
                      method: :delete,
                      data: { confirm: 'Are you sure?' },
                      class: "btn btn-danger align-center" %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

</div>
