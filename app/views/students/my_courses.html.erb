<div class="container">
  <h1>My Courses: </h1>
  <table class="table">
    <thead>
      <tr>
        <th>Course Name</th>
        <th>Instructor</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <% group.courses.each do |course| %>
        <% if course.semester.status == 1 %>
          <% course.users.each do |user| %>
            <tr>
              <td><%= course.name %></td>
              <td>
                <%= user.full_name %>
                <ul class="list-group">
                  <li>Mail: <%= mail_to "Send Mail", user.email%></li>
                  <li>Phone: <%=user.phone%></li>
                </ul>
              </td>
            </tr>
          <% end %>
        <% end %>
        <% end %>
      <% end %>
