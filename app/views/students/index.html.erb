<div class="container">
  <br><br>
  <div class="jumbotron">
    <table class="table">
      <thead>
        <tr>
          <th>Task Title</th>
          <th>Description</th>
          <th>Date To Deliver</th>
          <th>Course</th>
        </tr>
      </thead>
      <% @groups.each do |group| %>
        <% group.courses.each do |course| %>
        <% if course.semester.status == 1 %>
          <% course.tasks.where(['date_to_deliver > ?', Time.now]).each do |task| %>
            <tbody>
              <tr>
                <td><%= task.title %></td>
                <td><%= task.description %></td>
                <td><%= task.date_to_deliver %></td>
                <td><%= course.name %></td>
              </tr>
            </tbody>
          <% end %>
        <% end %>
        <% end %>
      <% end %>
    </table>
  </div>
</div>
